{% extends 'shared/layout.jinja' %}

{% block title %} Acesso ao sistema {% endblock %}

{% block content %}
  <section class="section margin-top-large">
    <div class="container container-lg">
      <form action="{{ url_for('signin.create') }}", method='post'>
        {{ form.csrf_token }}
        <fieldset>
          <legend>Acesso ao sistema</legend>
          <div class="row">
            <div class="col sm-12">
              <div class="form-group">
                {{ form.email.label }}
                {{ form.email(class_='input-block') }}
                {% for message in form.email.errors  %}
                  <p>{{ form.email.label.text }} {{ message }} </p>
                {% endfor %}
              </div>
            </div>
            <div class="col sm-12">
              <div class="form-group">
                {{ form.password.label }}
                {{ form.password(class_='input-block') }}
                {% for message in form.email.errors  %}
                  <p>{{ form.password.label.text }} {{ message }} </p>
                {% endfor %}
              </div>
            </div>
            <div class="col sm-12">
              <div class="form-group text-right">
                {{ form.submit(class_='paper-btn btn-success') }}
              </div>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </section>
{% endblock %}
